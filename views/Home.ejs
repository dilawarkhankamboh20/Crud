<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crud</title>
    <link rel="stylesheet" href="./css/style.css" />
    <script defer src="./js/app.js"></script>
  </head>
  <body>
    <main class="container">
      <div id="Grid">
        <div class="inputs_section">
          <h2>Insert Data</h2>
          <div class="inputs">
            <form action="/" method="post">
              <input type="text" name="name" placeholder="Enter your name" />
              <input type="text" name="city" placeholder="Enter your city" />
              <input type="text" name="profession" placeholder="Enter your profession" />
              <button class="btn">Submit</button>
            </form>
          </div>
        </div>
        <!-- table -->
        <div class="table_section">
          <h2>View Data</h2>
          <table border="1">
            <tr>
              <th>Name</th>
              <th>City</th>
              <th>Profession</th>
              <th class="action">Action</th>
            </tr>

            <% employ.forEach(element => { %>
            <tr>
                <td><%=element.name %> </td>
                <td><%=element.city %></td>
                <td><%=element.profession %></td>
                <td class="flex">
                   
                    <form method="post" action="/delete/<%=element._id %>"><button>Delete</button></form>
                    <form method="get" action="/edit/<%=element._id %>"><button>Update</button></form>
                </td>
            </tr>     
            <% }) %>
          </table>
        </div>
      </div>
    </main>
  </body>
</html>
